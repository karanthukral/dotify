# All Other Aliases
alias bx="bundle exec"
alias vi="vim"
alias gityolo= "git add .; git commit --amend --no-edit; git push origin +$(git rev-parse --abbrev-ref HEAD)"
alias kube="kubectl"
alias fire-minikube="minikube delete && minikube start --vm-driver=hyperkit --kubernetes-version=v1.9.0"
alias cdgithub="cd ~/src/github.com/karanthukral"

# Make sure tmux uses all the colours
alias tmux="TERM=screen-256color tmux -2"
